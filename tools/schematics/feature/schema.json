{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "SchematicsFeature",
  "title": "Feature Schematic",
  "type": "object",
  "description": "Generate a single feature library within a domain",
  "properties": {
    "app": {
      "type": "string",
      "default": "app",
      "description": "Target app name (e.g., app)",
      "x-prompt": "What is the target app name?"
    },
    "domain": {
      "type": "string",
      "description": "Domain name (e.g., products, users)",
      "x-prompt": "What is the domain name?"
    },
    "name": {
      "type": "string",
      "description": "Feature name (e.g., list, detail)",
      "x-prompt": "What is the feature name?"
    },
    "routing": {
      "type": "boolean",
      "description": "Add route to shell",
      "default": false
    },
    "navigation": {
      "type": "boolean",
      "description": "Add to navigation menu",
      "default": false
    }
  },
  "required": ["app", "domain", "name"]
}
