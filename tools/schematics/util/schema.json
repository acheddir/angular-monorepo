{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "SchematicsUtil",
  "title": "Util Schematic",
  "type": "object",
  "description": "Generate a single utility library within a domain",
  "properties": {
    "app": {
      "type": "string",
      "description": "Target app name (e.g., demo)",
      "x-prompt": "What is the target app name?"
    },
    "domain": {
      "type": "string",
      "description": "Domain name (e.g., products, users)",
      "x-prompt": "What is the domain name?"
    },
    "name": {
      "type": "string",
      "description": "Utility name (e.g., formatters, validators, helpers)",
      "x-prompt": "What is the utility name?"
    }
  },
  "required": ["app", "domain", "name"]
}
